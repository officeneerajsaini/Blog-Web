<%- include('partials/header.ejs') %>
<div class="div1-post">
  <form class="form form-res" action="/post" method="POST">
    <div class="register-form-heading">
      <p id="post-heading">Create a Post</p>
      <hr>
    </div>
    <div class="form-group required">
      <label class="label" for="exampleInputEmail1">Title </label>
      <input type="text" class="form-control form-input" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Title" name="title" required>
    </div>
    <div class="form-group required">
      <label class="label" for="exampleInputPassword1">Post </label>
      <input type="text" class="form-control form-input" id="exampleInputPassword1" placeholder="Enter Post" name="para" required>
    </div>
    <button type="submit" class="btn btn-dark btn-primary res-btn" id="post-btn">Post</button>
  </form>
</div>
<%- include('partials/footer.ejs') %>
